{
  "version": 2,
  "buildCommand": "cd apps/web && npm install && npm run build",
  "builds": [
    { "src": "apps/web/build/server/index.js", "use": "@vercel/node" },
    { "src": "apps/web/build/client/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "apps/web/build/client/assets/$1" },
    { "src": "/(.*)", "dest": "apps/web/build/server/index.js" }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://your-backend-url.com"
  }
}
